{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "es2020",
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@app/*": ["app/*"],
      "@pages/*": ["app/pages/*"],
      "@elements/*": ["app/elements/*"],
      "@dialogs/*": ["app/elements/dialogs/*"],
      "@services/*": ["app/services/*"]
    },
  },
  "angularCompilerOptions": {
    "strictTemplates": true,
    "strictInjectionParameters": true
  }
}
