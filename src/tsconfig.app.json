{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "types": [],
    "paths": {
      "@app/*": ["app/*"],
      "@pages/*": ["app/pages/*"],
      "@elements/*": ["app/elements/*"],
      "@dialogs/*": ["app/elements/dialogs/*"],
      "@services/*": ["app/services/*"]
    },
  },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
